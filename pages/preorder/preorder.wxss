/* pages/index/register.wxss */
page{
  height: 100%;
}
 
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #f2f2f2
} 
 
/*登录图片*/
.login-icon{
  flex: none;
}
.login-img{
  width: 750rpx;
  height: 482rpx;
}
 
/*表单内容*/
.login-from {
  margin-top: 20px;
  flex: auto;
  height:100%;
}
 
.inputView {
  background-color: #fff;
  line-height: 44px;
}
/*输入框*/
.nameImage, .keyImage {
  margin-left: 22px;
  width: 28rpx;
  height: 28rpx;
  margin-top:30rpx;
}
 
.loginLab {
  margin: 15px 15px 15px 10px;
  color: #545454;
  font-size: 28rpx;
}
.inputText {
  flex: block;
  float: right;
  text-align: right;
  margin-right: 22px;
  margin-top: 11px;
  color: #cccccc;
  font-size: 28rpx
}
 
.line {
  width: 100%;
  height: 1px;
  background-color: #cccccc;
  margin-top: 1px;
}
/*按钮*/
.loginBtnView {
  width: 100%;
  height: auto;
  background-color: #f2f2f2;
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}
 
.loginBtn {
  width: 100%;
  margin-top: 70rpx;
}
.forPwdBtn{
  width:30%;
  height:100%;
  color:black;
  font-size:25rpx;
  margin-right:0%;
  background:none;
  border-color:#000;
}
.loginForm{
  width: 574rpx;
  height: 390rpx;
}
.backLoginBtn{
  width:30%;
  height:100%;
  color:black;
  font-size:25rpx;
  margin-left:0%;
  background:none;
  border-color:#000;
}
.forPwdBtn::after{
  border: none;
}

.backLoginBtn::after{
  border:none;
}
.registerBtn{
  width: 100%;
  margin-top:50rpx;
}
.verifCode{
  width:574rpx;
  /* height:60rpx; */
  display: flex;
  flex-direction: row;
  height:80rpx;
  align-items: center;
  
  background-color:white;
  
}
.getVerifCodeBtn{
  margin-right:0%;
  width:auto;
  height:100%;
  /* text-align: center; */
  font-size:25rpx;
  background:none;
  display:flex;
  flex-direction: row;
  align-items: center;
  border-color:#000;
  flex-wrap: nowrap;
}
.getVerifCodeBtn::after{
  border:none;
}
.verifCodeInput{
  font-size:30rpx;
  text-align: left;
  margin-left:40rpx;
  
}
.inviteCodeInput{
  width:100%;
  font-size:30rpx;
  text-align: right;
  margin-right:40rpx;
}

.positionContainer{
  height:600rpx;
  margin-bottom: 100rpx;
  border-style: solid;
  border-color: black;
  border-width: 4rpx;
  display:flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: space-between;
}
.lineBox{
  display: flex;
  height: 20%;
  flex-direction: row;
  flex-wrap: nowrap;
  /* margin-top:20rpx; */
  border-color: rgb(216, 152, 152);
  border-style: solid;
  border-width: 4rpx;
  align-items: center;
  justify-content: space-around;
}
.desk{
  border-color: rgb(216, 152, 152);
  border-style: solid;
  border-width: 4rpx;
  margin-left: 40rpx;
}
.chair{
  width:30rpx;
  height:30rpx;
  border-color: rgb(0, 0, 0);
  border-style: solid;
  border-width: 4rpx;
  background-color: green;
}
.deskType1{
  width:80rpx;
  height:40rpx;
  border-color: rgb(0, 0, 0);
  border-style: solid;
  border-width: 4rpx;
  background-color: rgb(216, 196, 142);
}
.chairRowBox{
  display: flex;
  
  flex-direction: row;
  justify-content: space-between;
  height: 25%;
  width: 100rpx;
}
.chairColumnBox{
  height: 100%;
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;

}